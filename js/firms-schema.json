{
  "_meta": {
    "description": "Schema pre zaznam firmy/variant (zyp) pre vz31/vz34; hodnoty v ASCII, jednotky v mm, optional polia mozu byt null alebo vynechane.",
    "version": "0.1"
  },
  "schema": {
    "firmId": "string - unikatny slug firmy",
    "firmName": "string - nazov firmy",
    "vz": "string - 'vz31' alebo 'vz34'",
    "zyp": "string - nazov variantu v ramci firmy (napr. default, a, b, c, x, y, z)",
    "notes": "string[] - volne poznamky",
    "assets": [
      {
        "label": "string - popis obrazka/schem",
        "path": "string - relativna cesta alebo URL"
      }
    ],
    "dimensions": {
      "W": "number - sirka vrecka",
      "L": "number - vyska vrecka",
      "G": "number - zlom",
      "K": "number - chlopna",
      "Cpitch": "number - roztec C (vz34 only)",
      "AxisInK": "number - os v chlopni (vz34 only)"
    },
    "clip": {
      "count": "number - pocet spon (napr. 6)",
      "offsetX": "number - vzdialenost od bocnej hrany (mm)",
      "offsetY": "number - vzdialenost od hornej hrany (mm)",
      "pitch": "number - roztec medzi sponami (mm)",
      "packageCount": "number - ks/blok (napr. 150)",
      "type": "string - typ spony (plast)",
      "easyOpen": "boolean - easy-open ano/nie",
      "notes": "string[] - napr. 'Z rez musi byt prevedeny do konca chlopne'"
    },
    "cut": {
      "fromCutWidth": "number - sirka rezu (napr. 6 mm z rezu)",
      "fromNonCutWidth": "number - sirka bez rezu (napr. 9-7 mm)",
      "toFlapEnd": "boolean - rez az po koniec chlopne"
    },
    "air": {
      "count": "number - pocet otvorov (napr. 6)",
      "diameter": "number - priemer (napr. 3)",
      "offsetFromEdge": "number - vzdialenost od bocnej hrany (napr. 30)",
      "offsetY": "number - vzdialenost od hornej hrany (ak je znama)",
      "pitch": "number - roztec (ak je znama)",
      "notes": "string[] - napr. 'nezasiahnut EAN kod'"
    },
    "perforation": {
      "shape": "string - tvar/perforacia",
      "side": "string - strana",
      "offset": "number - offset od kraja",
      "halfLen": "number - polovicna dlzka/hlbka"
    },
    "fingerHole": {
      "diameter": "number",
      "posX": "number",
      "posY": "number"
    },
    "warnings": "string[] - dalsie varovania"
  },
  "example": {
    "firmId": "epicom",
    "firmName": "EPICOM SP",
    "vz": "vz31",
    "zyp": "default",
    "notes": [
      "Plastove spony 150 ks/blok",
      "Z rez musi byt prevedeny do konca chlopne"
    ],
    "assets": [],
    "dimensions": { "W": null, "L": null, "G": null, "K": null, "Cpitch": null, "AxisInK": null },
    "clip": {
      "count": 6,
      "offsetX": null,
      "offsetY": null,
      "pitch": null,
      "packageCount": 150,
      "type": "plast",
      "easyOpen": false,
      "notes": []
    },
    "cut": { "fromCutWidth": 6, "fromNonCutWidth": 9, "toFlapEnd": true },
    "air": { "count": 6, "diameter": 3, "offsetFromEdge": 30, "offsetY": null, "pitch": null, "notes": [ "nezasiahnut EAN kod" ] },
    "perforation": { "shape": null, "side": null, "offset": null, "halfLen": null },
    "fingerHole": { "diameter": null, "posX": null, "posY": null },
    "warnings": []
  }
}
